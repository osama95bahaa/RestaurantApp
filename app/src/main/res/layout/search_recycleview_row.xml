<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/searchCardView"
    android:layout_marginTop="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/searchImageview"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:src="@drawable/food"
                android:layout_margin="10dp"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/searchImageview">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/searchNameTextview"
                    android:text="Name:"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/searchCuisineTextview"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:text="Cuisine:"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/searchaddressTextview"
                    android:layout_marginTop="20dp"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:text="Address:"/>

            </LinearLayout>

            <TextView
                android:layout_width="55dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:id="@+id/searchRating"
                android:background="@drawable/rating_details_textview"
                android:text="4.3/5" />




        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>